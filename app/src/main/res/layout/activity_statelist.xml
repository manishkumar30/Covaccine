<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statelist">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="  CovidTracker"
        android:gravity="center"
        android:textAlignment="textStart"
        android:drawableLeft="@drawable/covid"
        android:textSize="40sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:id="@+id/head"
        tools:ignore="RtlCompat" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/head"
        android:id="@+id/Linear"
        android:orientation="horizontal"
        android:weightSum="100"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmed"
            android:textSize="15sp"
            android:textColor="@color/confirm"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="25"
            android:singleLine="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recovered"
            android:textSize="15sp"
            android:textColor="@color/recover"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_weight="25"
            android:singleLine="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="Deceased"
            android:textSize="15sp"
            android:textColor="@color/red"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:singleLine="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textSize="15sp"
            android:textColor="#F4790B"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="25"
            android:singleLine="true"
            />

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/Linear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/stateList"
        />
     <ProgressBar
         android:layout_width="50dp"
         android:layout_height="50dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:progressTint="@color/teal_700"
         android:id="@+id/progress2"
         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Sorry unable to fetch data\nPlease Check your Internet Connection"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="casual"
        android:textSize="20sp"
        android:id="@+id/error2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>